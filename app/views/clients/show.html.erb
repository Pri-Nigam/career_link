<div id="jobs">
  <% if @jobs.count != 0 %>
    <% @jobs.each do |job| %>
      <div class="job">
        <h2><%= link_to job.title, job_path(id: job.id) %></h2>
        <p><%= truncate(job.description, length: 50, omission: "...")%>,<%=link_to "Read More",job_path(id: job.id)%></p>
      </div>
    <% end %>
    <div id="links">
      <%= link_to "New Job", new_job_path, class: "btn btn-sm btn-default" %>
      <%= link_to "Back", root_path, class: "btn btn-sm btn-default" %>
    </div>
  <% else %>
    <h2>You haven't posted any jobs</h2>
    <h3>Thought of something new? Create here</h3>
    <div id="links">
      <%= link_to "New Job", new_job_path, class: "btn btn-sm btn-default" %>
      <%= link_to "Back", root_path, class: "btn btn-sm btn-default" %>
    </div>
  <% end %>
  <br>
  <%= paginate @jobs %>
</div>
