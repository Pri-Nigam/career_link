<p id="notice"><%= notice %></p>

<div><h1>Jobs</h1></div>
                             
<table class='table'>
  
  <thead>
    <tr>
      <th>Job title</th>
      <th>Salary</th>
      <th>Experience</th>
      <th>Description</th>
      <th>Show </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.salary %></td>
        <td><%= job.experience %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job_path(id: job.id),method: :get ,class:'btn btn-lg btn-primary'%></td>    
      </tr>
    <% end %>
  </tbody>
</table>
<br>
